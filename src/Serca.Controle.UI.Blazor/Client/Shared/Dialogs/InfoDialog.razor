<MudDialog Style="text-align: center;" ContentStyle="text-align: start" ClassActions="d-flex justify-end">
    <DialogContent>  
        <div class="main">
            @((MarkupString)ContentText)
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Size="Size.Small">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    void Submit() => MudDialog.Close();
}